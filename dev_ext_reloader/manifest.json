{
  "manifest_version": 3,
  "name": "Avito фильтр (+OLX)",
  "description": "Это расширение позволяет фильтровать уже просмотренные или ненужные объявления на сайтах объявлений avito.ru и olx.ua.",
  "version": "1.2.3",
  "host_permissions": [
    "*://www.avito.ru/*",
    "*://www.olx.ua/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.avito.ru/*",
        "*://www.olx.ua/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": "icon128.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.js",
        "content.css",
        "melody.mp3"
      ],
      "matches": [
        "*://www.avito.ru/*",
        "*://www.olx.ua/*" 
      ],
      "use_dynamic_url": true
    }
  ]
}
